---
// src/components/TwoColumnSection.astro
type Props = {
  title?: string;
  as?: "section" | "article";
  leftClass?: string;
  rightClass?: string;
  containerClass?: string;
};

const {
  as = "section",
  leftClass = "",
  rightClass = "",
  containerClass = "",
} = Astro.props as Props;

const Tag = as;
---

<Tag class={`w-full ${containerClass}`}>
  <div class="mx-auto grid max-w-6xl gap-4 px-8 sm:px-12 lg:px-5 pb-10 md:grid-cols-2">
    <aside class={`rounded-2xl bg-white p-6 ${leftClass}`}>
      <slot name="left" />
    </aside>

    <main class={`rounded-2xl bg-white p-6 ${rightClass}`}>
      <slot name="right" />
    </main>
  </div>
</Tag>
