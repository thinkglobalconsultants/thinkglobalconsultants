---
const {title, description} = Astro.props;
---
<section class="overflow-hidden bg-[#3C788C] py-24 sm:py-10">
  <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start">
      <div class="px-6 lg:px-0 lg:pt-5 lg:pr-4">
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
          <h2 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-white sm:text-5xl">{title}</h2>
          <p class="mt-6 text-lg/8 text-white">{description}</p>
          <dl class="mt-10 max-w-xl space-y-8 text-base/7 text-gray-600 lg:max-w-none">
            <slot name="bulletpoint"/>
          </dl>
        </div>
      </div>
      <div class="sm:px-6 lg:px-0">
          <slot name="image"/>
      </div>
    </div>
  </div>
</section>
