---
const { title, paragraph, paragraph1 } = Astro.props;
---
<section class="bg-white py-24 sm:py-10">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h1 class="text-5xl font-semibold tracking-tight text-gray-900 sm:text-5xl">{title}</h1>
      <p class="mt-6 text-lg/8 text-gray-700">{paragraph}</p>
      <p class="mt-6 text-lg/8 text-gray-700">{paragraph1}</p>
    </div>
  </div>
</section>
